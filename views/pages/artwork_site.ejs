<!doctype html>
<head>
    <meta charset="utf-8">
    <title>Art by Click</title>
    <link rel="stylesheet" href="/css/artworks_site_style.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lobster+Two:400,700i|Major+Mono+Display" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700i" rel="stylesheet">
</head>
<body>

    <div class="container">
      <div class="photo">
          <img src="/<%= artwork.artworkImage.substring(7,artwork.artworkImage.length) %>">
      </div>
        <div class = "info">
            <div class = "desc">
                Title: <span style="font-family: 'Source Sans Pro'"><%= artwork.name %></span> <br>
                Created by: <span style="font-family: 'Source Sans Pro'"><%= artwork.artist %></span> <br>
                Price: <span style="font-family: 'Source Sans Pro'"><%= artwork.price %>$</span> <br>
                Describtion: <span style="font-family: 'Source Sans Pro'"><%= artwork.describtion %></span>
            </div>
        </div>
    </div>

</body>
